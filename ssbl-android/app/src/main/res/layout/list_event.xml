<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/less_white">

    <TextView
        android:id="@+id/list_event_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@color/subtitle_gray"
        android:padding="8dp"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_event_category"
        android:padding="16dp"  >

        <ImageView
            android:id="@+id/list_event_icon"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:src="@drawable/red_explosion" />

        <TextView
            android:id="@+id/list_event_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/list_event_icon"
            android:layout_toEndOf="@id/list_event_icon"
            android:textStyle="bold"
            android:textColor="@color/dark_gray"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/list_event_preview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/list_event_name"
            android:layout_toRightOf="@id/list_event_icon"
            android:layout_toEndOf="@id/list_event_icon"
            android:textColor="@color/dark_gray"
            android:paddingLeft="16dp"
            android:textSize="14sp" />

    </RelativeLayout>
</RelativeLayout>