<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="MyNavigationDrawerTheme" parent="MaterialNavigationDrawerTheme">
        <item name="colorPrimary">@color/gc_purple</item>
        <item name="colorPrimaryDark">#558b2f</item>
        <item name="colorAccent">#FFFFFF</item>

        <item name="drawerColor">@color/dark_gray</item>
        <item name="singleAccount">true</item>

        <item name="sectionStyle">@style/MySectionTheme</item>
    </style>

    <style name="MySectionTheme" >
        <item name="sectionColorText">@color/white</item>
    </style>

    <style name="LowerLevelTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/ImitationActionBar</item>
    </style>

    <style name="ImitationActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/gc_purple</item>
        <item name="android:height">56dp</item>
    </style>

</resources>
